html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title iofrm
    link(rel='stylesheet', type='text/css', href='/app-sets/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/app-sets/css/fontawesome-all.min.css')
    link(rel='stylesheet', type='text/css', href='/app-sets/css/iofrm-style.css')
    link(rel='stylesheet', type='text/css', href='/app-sets/css/iofrm-theme5.css')
  body
    .form-body
      .website-logo
        a(href='index.html')
          .logo
            img.logo-size(src='/app-sets/images/logo-light.svg', alt='')
      .row
        .img-holder
          .bg
          .info-holder
            img(src='/app-sets/images/graphic2.svg', alt='')
        .form-holder
          .form-content
            .form-items
              h3 Get more things done with Loggin platform.
              p Access to the most powerfull tool in the entire design and web industry.
              .page-links
                a(href='/authentication/login') Login
                a.active(href='/authentication/register') Register
              form
                input.form-control(type='text', name='name', placeholder='Full Name', required='')
                input.form-control(type='email', name='email', placeholder='E-mail Address', required='')
                input.form-control(type='password', name='password', placeholder='Password', required='')
                .form-button
                  button#submit.ibtn(type='submit') Register
              .other-links
                span Or register with
                a(href='#') Facebook
                a(href='#') Google
                a(href='#') Linkedin
    script(src='/app-sets/js/jquery.min.js')
    script(src='/app-sets/js/popper.min.js')
    script(src='/app-sets/js/bootstrap.min.js')
    script(src='/app-sets/js/main.js')
